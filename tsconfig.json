{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "rootDirs": ["./src/**/*", "./e2e-tests/**/*"],
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*", "build/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./e2e-tests/@types"
    ],
  },
  "exclude": ["node_modules", "**/*.spec.js", "jest.config.js"]
}
